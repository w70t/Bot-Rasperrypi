# TikTok Video Intelligence API - Environment Configuration
# Copy this file to .env and fill in your values

# Application Settings
APP_NAME=TikTok Video Intelligence API
APP_VERSION=1.0.0
DEBUG=False
ENVIRONMENT=production
HOST=0.0.0.0
PORT=8000
WORKERS=4

# Security
SECRET_KEY=change_this_to_random_secret_key
API_KEY_PREFIX=tk_

# MongoDB Configuration
MONGO_URI=mongodb://localhost:27017
MONGO_DB_NAME=tiktok_api
MONGO_MAX_POOL_SIZE=10
MONGO_MIN_POOL_SIZE=1

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_DB=0
REDIS_PASSWORD=
REDIS_CACHE_TTL=3600

# Rate Limiting (requests per minute)
RATE_LIMIT_FREE=10
RATE_LIMIT_BASIC=30
RATE_LIMIT_PRO=100
RATE_LIMIT_BUSINESS=500

# Usage Limits (requests per month)
USAGE_LIMIT_FREE=50
USAGE_LIMIT_BASIC=1000
USAGE_LIMIT_PRO=10000
USAGE_LIMIT_BUSINESS=100000

# Plan Pricing (USD per month)
PRICE_FREE=0.0
PRICE_BASIC=5.0
PRICE_PRO=20.0
PRICE_BUSINESS=100.0

# TikTok Scraping
TIKTOK_TIMEOUT=30
TIKTOK_MAX_RETRIES=3
USER_AGENT=Mozilla/5.0 (Windows NT 10.0; Win64; x64) AppleWebKit/537.36

# Logging
LOG_LEVEL=INFO
LOG_FILE_PATH=logs/api.log
ERROR_LOG_FILE_PATH=logs/errors.log
ACCESS_LOG_FILE_PATH=logs/access.log

# Telegram Bot (for owner notifications)
TELEGRAM_BOT_TOKEN=your_bot_token_from_botfather
TELEGRAM_OWNER_CHAT_ID=your_telegram_chat_id
TELEGRAM_NOTIFICATIONS_ENABLED=True

# Telegram Notification Settings
NOTIFY_NEW_SUBSCRIBER=True
NOTIFY_ERRORS=True
NOTIFY_DAILY_REPORT=True
NOTIFY_MILESTONES=True
DAILY_REPORT_TIME=09:00

# Stripe Payment Processing
STRIPE_SECRET_KEY=sk_test_your_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_test_your_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# Stripe Plan Price IDs (from Stripe Dashboard)
STRIPE_PRICE_BASIC=price_xxxxx
STRIPE_PRICE_PRO=price_xxxxx
STRIPE_PRICE_BUSINESS=price_xxxxx

# Email Settings (for notifications)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your_email@gmail.com
SMTP_PASSWORD=your_app_password
SMTP_FROM_EMAIL=noreply@yourdomain.com
SMTP_FROM_NAME=TikTok API

# Admin Panel
ADMIN_USERNAME=admin
ADMIN_PASSWORD=change_me_in_production
ADMIN_PANEL_SECRET_PATH=/admin-xyz123
ADMIN_SESSION_TIMEOUT_MINUTES=30

# Backup Settings
BACKUP_ENABLED=True
BACKUP_PATH=backups/
BACKUP_RETENTION_DAYS=30

# Performance Monitoring
MAX_RESPONSE_TIME_WARNING=3.0
SLOW_QUERY_THRESHOLD=1.0

# Country Detection (Premium Feature)
GEOIP_DATABASE_PATH=
COUNTRY_DETECTION_ENABLED=False

# RapidAPI Integration (if using)
RAPIDAPI_KEY=
RAPIDAPI_HOST=

# Monitoring & Analytics
SENTRY_DSN=
ANALYTICS_ENABLED=True

# Cloudflare (optional)
CLOUDFLARE_API_TOKEN=
CLOUDFLARE_ZONE_ID=
